pipeline {
  agent any

  environment {
      DOCKER_IMAGE = "bay433/spring-app-deploy:v${BUILD_NUMBER}"
      REGISTRY_CREDENTIALS = credentials('docker-cred')
      SONAR_URL = "http://20.255.60.219:9000"
  }

  stages {

    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/B-BRAHIM433/Spring-App-Deploy.git'
      }
    }

    stage('Build JAR') {
      steps {
        sh 'cd java-maven-sonar-argocd-helm-k8s/spring-boot-app && mvn clean package'
      }
    }

    stage('SonarQube Analysis') {
      steps {
        withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
          sh '''
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            mvn sonar:sonar \
            -Dsonar.login=$SONAR_AUTH_TOKEN \
            -Dsonar.host.url=$SONAR_URL
          '''
        }
      }
    }

    stage('Build & Push Docker Image') {
      steps {
        script {
          sh '''
            echo "Building Docker image..."
            cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
            docker build -t ${DOCKER_IMAGE} .

            echo "Pushing image..."
            docker login -u $REGISTRY_CREDENTIALS_USR -p $REGISTRY_CREDENTIALS_PSW
            docker push ${DOCKER_IMAGE}
          '''
        }
      }
    }

    stage('Deploy to Kubernetes (Azure VM)') {
      steps {
        script {
          sh '''
            echo "Updating YAML manifest..."
            sed -i "s@image:.*@image: ${DOCKER_IMAGE}@" \
              java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            echo "Applying to Kubernetes..."
            kubectl apply -f java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml

            echo "Restarting pods..."
            kubectl rollout restart deployment spring-app-deployment
          '''
        }
      }
    }

  }
}
